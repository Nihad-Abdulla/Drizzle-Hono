{
  "compilerOptions": {
    "target": "ESNext",                  
    "module": "ESNext",                 
    "moduleResolution": "node",          
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "strict": true,                      
    "outDir": "./dist",                 
    "rootDir": "./src",                  
    "resolveJsonModule": true            
  },
  "include": ["src/**/*"],                
  "exclude": ["node_modules"]             
}
